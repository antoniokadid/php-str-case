  "description": "A PHP library to work with text.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Antonio Kadid",
      "email": "antoniokadid@gmail.com",
      "homepage": "http://www.antoniokadid.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-mbstring": "*",
    "ext-json": "*"
  },
  "require-dev": {
